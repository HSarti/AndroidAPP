<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/infoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant Care &amp; Soil Moisture Info"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/moistureColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0-20% Dry (Red)\n21-50% Medium (Yellow)\n51-100% Wet (Green)"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/plantTips"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="Tips:\n- Water when dry.\n- Use sustainable watering methods.\n- Avoid overwatering."
        android:paddingStart="8dp" />

</LinearLayout>
